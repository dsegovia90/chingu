include includes/layout.pug

.welcome-div
  h1= title
  h3 Welcome to #{title}
  p Please use the button below to sign in with your slack group.
  a(href='/auth/slack')
    img(src='images/sign_in_with_slack.png')
  hr
  p To get additional features, add our app to your slack team.
  a(href="https://slack.com/oauth/authorize?&client_id=193194596657.202795275941&scope=mpim:write,commands,bot,chat:write:bot&redirect_uri=" + installLink)
    img(
      src='images/add_to_slack.png'
      srcset='images/add_to_slack.png 1x, images/add_to_slack@2x.png 2x'
      alt='Add to Slack'
      height='40'
      width='139' )
include includes/scripts.pug

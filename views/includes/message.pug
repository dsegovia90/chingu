if(messages.success)
  .alert.alert-success.alert-dismissible.fade.show.text-center(role='alert') #{messages.success}
    button(type='button' class='close' data-dismiss='alert' aria-label='Close')
      span(aria-hidden='true') &times
if(messages.danger)
  .alert.alert-danger.alert-dismissible.fade.show.text-center(role='alert') #{messages.danger}
    button(type='button' class='close' data-dismiss='alert' aria-label='Close')
      span(aria-hidden='true') &times